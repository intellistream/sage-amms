# Include documentation
include README.md
include MIGRATION.md
include QUICKREF.md
include LICENSE

# Include package metadata
include pyproject.toml
include setup.py

# Include C++ source and headers
recursive-include sage/libs/amms/implementations/include *.h *.hpp *.h.in
recursive-include sage/libs/amms/implementations/src *.cpp *.cc *.cl
recursive-include sage/libs/amms/implementations/src CMakeLists.txt
recursive-include sage/libs/amms/implementations/cmake *.cmake

# Include CMake configuration
include sage/libs/amms/implementations/CMakeLists.txt

# Include build scripts
include sage/libs/amms/implementations/buildCPUOnly.sh
include sage/libs/amms/implementations/buildWithCuda.sh

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store

# Exclude build artifacts
prune sage/libs/amms/implementations/build
prune sage/libs/amms/implementations/dist
prune sage/libs/amms/implementations/*.egg-info
